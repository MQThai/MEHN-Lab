<h1>LinkHub</h1>

<div class="user">
    {{#if currentUser}}
    <a href="/logout">Logout {{currentUser.local.email}}</a>
    {{else}}
    <a href="/login">Login</a>
    <a href="/signup">Signup</a>
    {{/if}}
  
</div>

<a class="post" href="/links/new">Click to post new article</a>

<ul>
  {{#each links}}
    <li>
    <a href="/links/{{this.id}}"> {{this.title}} </a> 
     <a class="button" href="/links/edit/{{this.id}}">Edit</a>
    </li>
  {{/each}}
</ul>




