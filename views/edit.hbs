<h2>Edit item:</h2>

<form action="/links/{{link.id}}?_method=put" method="post">
  <p class="inputs">
    Title:<br>  <input type="text" name="title" value="{{ link.title }}"/><br>
    URL:<br> <input type="text" name="url" value="{{ link.url }}"/><br>
    Description:<br> <input class="description" type="text" name="description" value="{{ link.description }}"/><br>
  </p>
  <input type="submit" value="Update"/>
</form>

<form action="/links/{{ link.id }}?_method=delete" method="post">
  <input type="submit" value="Remove">
</form>